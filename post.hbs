{{!< default}}
{{> header}}
<main class="main_theme" role="main">
  {{#post}}
  <article class="article_theme" role="article" itemscope itemtype="http://schema.org/Article">
    <header class="postheader_theme">
      <time class="date_theme" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
      <h1 class="posttitle_theme" itemprop="headline">{{title}}</h1>
    </header>
    <div class="postcontent_theme" itemprop="articleBody">
      {{content}}
    </div>
    {{#if tags}}
    <div class="posttags_theme">
      Tags: {{tags separator=" | "}}
    </div>
    {{/if}}
    <div class="sharepost_theme">
      <h4 class="share_theme">Share this post: &nbsp;</h4>
      <a class="share_theme icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_theme">Twitter</span></a>
      <a class="share_theme icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_theme">Facebook</span></a>
      <a class="share_theme icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_theme">Google+</span></a>
    </div>
    {{#if author}}
    <footer class="postfooter_theme">
      <address itemscope itemtype="http://schema.org/Person">
        {{#if author.image}}
        <div class="authorimage_theme"><img src="{{author.image}}" itemprop="image" /></div>
        {{/if}}
        <h4 class="authorname_theme"><span itemprop="author">{{author.name}}</span></h4>
        {{#if author.website}}
        <div class="authorwebsite_theme"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
        {{/if}}
      </address>
      <div class="authorbio_theme">
        <p>{{author.bio}}</p>
      </div>
    </footer>
    {{/if}}
  </article>
  {{/post}}
  {{#if pagination}}
  <div class="pagination_theme">
    {{{pagination}}}
  </div>
  {{/if}}
</main>
{{> footer}}
